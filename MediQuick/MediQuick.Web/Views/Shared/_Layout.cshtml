@model MediQuick.Web.Models.BaseModel

<!DOCTYPE html>
<html lang="en">
<head>
    <script type="text/javascript">
        @if((Model != null && Model.Authorised && Model.User == null) || Model == null)
        {
            @:window.location.href = "@Url.Action("Login","User")";
        }
    </script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediQuick</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MediQuick.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="topnav">
            <a class="active" b-e1ocawbhh6 asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <a  b-e1ocawbhh6 asp-area="" asp-controller="Home" asp-action="About">About</a>
            <a  b-e1ocawbhh6 asp-area="" asp-controller="Home" asp-action="About">Contact</a>
          @if((Model != null && Model.User == null) || Model == null )
            {
                <div class="login-container round-corners ">
                    <a class="active round-corners "  b-e1ocawbhh6 asp-area="" asp-controller="User" asp-action="Login">Log in</a>
                </div>
            }

            @if(Model != null && Model.User != null)
            {
                <div class="login-container round-corners ">
                    <a class="round-corners "  b-e1ocawbhh6 asp-area="" asp-controller="User" asp-action="Logout">Log out</a>
                </div>
            }
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MediQuick.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
